<script type="text/javascript">
    $(function () {
        
        //加载模块列表
        LoadModule()


        $("input[type=checkbox][name=isAll]").bind("click", selectCheck)
    })
    function LoadModule() {

        $.ajax({
            type: "POST",
            url: "/Admin/Handle/ModuleList",
            dataType: "json",
            success: function (rsp) {
                if (rsp.success) {
                    tableInit(rsp.rows)
                } else {
                    alert(rsp.msg)
                }
            },
            error: function (e, s, t) {
                //alert('error');
                //alert('网络错误');
            }
        });

    }
    //
    function tableInit(rows) {
        var tb = $("#v1 table.table").find("tbody");
        var th = $("table.table").find("thead tr th").length;
        //清空
        tb.html("");
        //无记录
        var tr01 = $("<tr align=\"center\"></tr>");
        $("<td colspan=\"" + th + "\">loading</td>").appendTo(tr01);
        tb.append(tr01);

        if (rows[0] != 'undefined' && rows[0] != null) {
            //清空
            tb.html("");
            for (var i = 0; i < rows.length; i++) {
                var r = rows[i];
                var tr = $("<tr  recid=\"" + r.Id + "\"></tr>");
                $("<td width=\"20px\"><input type=\"checkbox\" tag=\"chk\" /></td>").appendTo(tr);
                $("<td width=\"35px\">" + r.Id + "</td>").appendTo(tr);
                $("<td>" + r.ModuleName + "</td>").appendTo(tr);
                $("<td>" + r.ModuleCategory.CategoryName + "</td>").appendTo(tr);
                $("<td>" + r.CommandParameter + "</td>").appendTo(tr);
                $("<td><a href=\"javascript:;\" class=\"app-button\" onclick=\"getModule(" + r.Id + ")\">修改</a></td>").appendTo(tr);
                tb.append(tr);
            }
        } else {
            //清空
            tb.html("");
            //无记录
            var tr = $("<tr align=\"center\"></tr>");
            $("<td colspan=\"" + th + "\">(暂无相关记录)</td>").appendTo(tr);
            tb.append(tr);
        }
    }
    //
    function getModule(id) {
        //载入数据
        loadContent("/Admin/Home/GetModule?id=" + id)
    }
    //
    function delData() {
        var selectArr = $("input[type=checkbox][tag=chk]:checked");
        var ids = "";
        for (var i = 0; i < selectArr.length; i++) {
            if (i == 0) {
                ids += $(selectArr[i]).parent().parent().attr("recid");

            } else {
                ids += "," + $(selectArr[i]).parent().parent().attr("recid");
            }
        }
        if (ids == "") { return; }

        $.ajax({
            type: "POST",
            url: "/Admin/Handle/DelModule",
            data: { ids: ids },
            dataType: "json",
            success: function (rsp) {
                if (rsp.success) {
                    alert("删除成功");
                    LoadModule();
                } else {
                    alert(rsp.msg)
                }
            },
            error: function (e, s, t) {
                //alert('error');
                //alert('网络错误');
            }
        });
    }
</script>
<span class="tip-title">模块管理</span>
